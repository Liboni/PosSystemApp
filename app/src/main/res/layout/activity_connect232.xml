<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0sp"
            android:paddingTop="5.0sp"
            android:paddingRight="10.0sp"
            android:paddingBottom="5.0sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:text="@string/SerialPort"
                android:textColor="#ff222222" />

            <TextView
                android:id="@+id/txtSerialPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:text="/dev/ttyS3"
                android:textColor="#ff222222" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0sp"
            android:paddingTop="5.0sp"
            android:paddingRight="10.0sp"
            android:paddingBottom="5.0sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:text="模块"
                android:textColor="#ff222222" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0sp"
                android:paddingRight="10.0sp"
                android:shrinkColumns="0"
                android:stretchColumns="0">

                <LinearLayout
                    android:id="@+id/main_linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">



                    <RadioGroup
                        android:id="@+id/group_monza_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.43"
                        android:gravity="left"
                        android:orientation="vertical">


                        <!--国芯-->
                        <RadioButton
                            android:id="@+id/baud_57600"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="UHF_N6801"

                            android:textColor="#333333" />

                        <!--荣睿-->
                        <RadioButton
                            android:id="@+id/baud_115200"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="UHF2/UHF3"
                            android:textColor="#333333" />
                    </RadioGroup>
                </LinearLayout>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

